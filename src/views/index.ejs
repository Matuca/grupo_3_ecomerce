      <section class="wrapper">
        <h2>Top ventas para ti</h2>
        <div class="topventas">
          <div class="slider">
            <div class="slide-track">
          <% if(locals.topventasypopulares && locals.topventasypopulares.length
          > 0){ %> <% for (let i=0; i < locals.topventasypopulares.length; i++){
          %>

         
          <div class="slide">
            <a href="/product/<%=productos[0][2].id%>">
            <img
              src="/img/<%= locals.topventasypopulares[i].dataValues.imagenes[0].imagen %>"
              alt="" width="100"
            /></a>
            <a href="/product/<%=productos[0][2].id%>">
              <h1><%= locals.topventasypopulares[i].titulo %></h1>
            </a>
          </div>
          <% } } %>
            </div>
            </div>

        </div>
