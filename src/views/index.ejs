        </div>
      </section>

      <section class="wrapper">
        <h2>Productos populares</h2>
        <div class="topventas">
          <div class="slider">
            <div class="slide-track">
              <% if(locals.topventasypopulares && locals.topventasypopulares.length
            > 0){ %>  
              <% for (let i=locals.topventasypopulares.length - 1; i >=
              0; i--){ %>
  
           
              <div class="slide">
                <a href="/product/<%=locals.topventasypopulares[i].idpublicacion%>">
                <img
                  src="/img/<%= locals.topventasypopulares[i].dataValues.imagenes[0].imagen %>"
                  alt="" width="100"
                /></a>
                <a href="/product/<%=locals.topventasypopulares[i].idpublicacion%>">
                  <h1><%= locals.topventasypopulares[i].titulo %></h1>
                </a>
              </div>
            
            <% } } %>
              
            </div>
          </div>
        </div>

        <div class="linkitems">
          <a href="#">Ver más</a>
        </div>

      
      </section>
